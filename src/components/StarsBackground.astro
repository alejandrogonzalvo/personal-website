---
// Stars Generation
const generateShadows = (n) => {
  let value = `${Math.random() * 100}vw ${Math.floor(Math.random() * 2000)}px #FFF`;
  for (let i = 2; i <= n; i++) {
    value += `, ${Math.random() * 100}vw ${Math.floor(Math.random() * 2000)}px #FFF`;
  }
  return value;
};

const shadowsSmall = generateShadows(70);
const shadowsMedium = generateShadows(20);
const shadowsBig = generateShadows(10);
---

<div id="stars-container">
    <div id="stars"></div>
    <div id="stars2"></div>
    <div id="stars3"></div>
</div>

<style define:vars={{ shadowsSmall, shadowsMedium, shadowsBig }}>
    #stars-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        pointer-events: none;
    }

    /* STARS */
    #stars {
        width: 1px;
        height: 1px;
        background: transparent;
        box-shadow: var(--shadowsSmall);
        animation: animStar 50s linear infinite;
        position: fixed; 
        top: 0;
        left: 0;
    }
    #stars:after {
        content: " ";
        position: fixed; 
        top: 2000px;
        width: 1px;
        height: 1px;
        background: transparent;
        box-shadow: var(--shadowsSmall);
        left: 0; 
    }
    
    #stars2 {
        width: 2px;
        height: 2px;
        background: transparent;
        box-shadow: var(--shadowsMedium);
        animation: animStar 100s linear infinite;
        position: fixed;
        top: 0;
        left: 0;
    }
    #stars2:after {
        content: " ";
        position: fixed;
        top: 2000px;
        width: 2px;
        height: 2px;
        background: transparent;
        box-shadow: var(--shadowsMedium);
        left: 0;
    }
    
    #stars3 {
        width: 3px;
        height: 3px;
        background: transparent;
        box-shadow: var(--shadowsBig);
        animation: animStar 150s linear infinite;
        position: fixed;
        top: 0;
        left: 0;
    }
    #stars3:after {
        content: " ";
        position: fixed;
        top: 2000px;
        width: 3px;
        height: 3px;
        background: transparent;
        box-shadow: var(--shadowsBig);
        left: 0;
    }
    
    @keyframes animStar {
        from { transform: translateY(0px); }
        to { transform: translateY(-2000px); }
    }
</style>
