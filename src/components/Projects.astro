---
import Section from './Section.astro';

const projects = [
  {
    title: "JanQL",
    tech: "Rust, Database Internals",
    description: "A persistent Key-Value store using a Log-Structured Merge (LSM) Tree architecture. Features MemTable buffering, Write-Ahead Log, and SSTables.",
    link: "#" // Placeholder or GitHub link if known
  },
  {
    title: "Edge AI Movement Analysis",
    tech: "Python3, NVIDIA Jetson",
    description: "Real-time human movement tracking system using Edge AI. Applied to sports analysis giving actionable feedback for tennis serves.",
    link: "#"
  },
  {
    title: "Jam Rivalry",
    tech: "Godot, GDScript",
    description: "Cooperative puzzle platformer created in 72h. Achieved top 20 placement in gameplay category. Features asymmetric mechanics.",
    link: "#"
  }
];
---

<Section class="projects" id="projects">
  <h2>Projects</h2>
  <div class="grid">
    {projects.map(project => (
      <div class="card">
        <h3>{project.title}</h3>
        <span class="tech">{project.tech}</span>
        <p>{project.description}</p>
        <!-- <a href={project.link}>View Project &rarr;</a> --> 
      </div>
    ))}
  </div>
</Section>

<style>
  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  .card {
    background: var(--surface-color);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid transparent;
    transition: transform 0.2s, border-color 0.2s;
  }
  .card:hover {
    transform: translateY(-5px);
    border-color: var(--text-secondary);
  }
  h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
  }
  .tech {
    font-size: 0.85rem;
    color: var(--accent-color);
    font-family: monospace;
    display: block;
    margin-bottom: 1rem;
  }
  p {
    color: var(--text-secondary);
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0;
  }
</style>
