---
import Section from './Section.astro';

const projects = [
  {
    title: "JanQL",
    year: "2025",
    tech: "Rust, Database Internals",
    description: "A persistent Key-Value store using a Log-Structured Merge (LSM) Tree architecture. Features MemTable buffering, Write-Ahead Log, and SSTables.",
    link: "https://github.com/alejandrogonzalvo/janql",
    image: "/images/janql.jpg"
  },
  {
    title: "Quvis",
    year: "2024",
    tech: "Python, React, Three.js, Qiskit",
    description: "Visualization framework for analyzing quantum circuit compilation on large-scale processors. Features a high-performance 3D web visualizer and spatiotemporal analysis with interactive timeslicing.",
    link: "https://quvis.net/",
    image: "/quvis-card.png",
    video: "/quvis-summary-optimized.mp4"
  },
  {
    title: "Jam Rivalry",
    year: "2020",
    tech: "Godot, GDScript",
    description: "Cooperative puzzle platformer created in 72h. Achieved top 20 placement in gameplay category. Features asymmetric mechanics.",
    link: "https://monkeysuite.itch.io/jam-rivalry",
    image: "/images/jam_rivalry.gif"
  }
];
---

<Section class="projects" id="projects" wide={true}>
  <h2>Projects</h2>
  <div class="grid">
    {projects.map(project => (
      <a href={project.link} class="project-item" target="_blank" rel="noopener noreferrer">
        <div class="block">
          {project.video ? (
            <video class="bg" autoplay loop muted playsinline>
               <source src={project.video} type="video/mp4" />
            </video>
          ) : (
            <>
              <div class="bg" style={`background-image: url(${project.image})`}></div>
              <div class="blur" style={`background-image: url(${project.image})`}></div>
            </>
          )}
          
          <div class="circleLight"></div>
          <div class="text">
            <h3>{project.title}</h3>
            <span class="year">{project.year}</span>
            <span class="tech">{project.tech}</span>
            <p>{project.description}</p>
          </div>
        </div>
      </a>
    ))}
  </div>
</Section>

<script>
    const cards = document.querySelectorAll('.project-item');

    cards.forEach(card => {
        const block = card.querySelector('.block');
        const circleLight = card.querySelector('.circleLight');
        
        // State for this specific card
        let mouse = { x: 0, y: 0 };
        // We now track target values and current interpolated values for smooth physics
        let target = { x: 0, y: 0, scale: 1, z: 0 };
        let current = { cx: 0, cy: 0, scale: 1, z: 0 };
        let isHovering = false;
        let animationFrame;

        // Mouse Move
        card.addEventListener('mousemove', (e) => {
            isHovering = true;
            const rect = card.getBoundingClientRect();
            // Calculate mouse position relative to card center
            target.x = (e.clientX - rect.left) - rect.width / 2;
            target.y = (e.clientY - rect.top) - rect.height / 2;
            
            // Set target "pop" state
            target.scale = 1.08;
            target.z = 20;

            // Simple diffuse light following cursor
            if (circleLight) {
                 const lightX = e.clientX - rect.left;
                 const lightY = e.clientY - rect.top;
                 (circleLight as HTMLElement).style.background = `radial-gradient(circle at ${lightX}px ${lightY}px, rgba(255,255,255,0.15), transparent 300px)`;
                 (circleLight as HTMLElement).style.opacity = '1';
            }
        });

        // Mouse Leave
        card.addEventListener('mouseleave', () => {
            isHovering = false;
            // Reset targets to resting state
            target.x = 0;
            target.y = 0;
            target.scale = 1;
            target.z = 0;
            
            if (circleLight) {
                (circleLight as HTMLElement).style.opacity = '0';
            }
        });

        // Animation Loop (per card)
        const update = () => {
             // Smoothly interpolate current values towards target
             // The divider (10) controls the "weight" or slowness of the transition
            current.cx += (target.x - current.cx) / 10;
            current.cy += (target.y - current.cy) / 10;
            current.scale += (target.scale - current.scale) / 10;
            current.z += (target.z - current.z) / 10;

            if (block) {
                 // Apply the interpolated values every frame
                 // This handles both the "hover in" smooth pop and "hover out" smooth reset
                 (block as HTMLElement).style.transform = `
                    scale(${current.scale}) 
                    translate(${current.cx * 0.05}px, ${current.cy * 0.05}px) 
                    translateZ(${current.z}px)
                    rotateX(${current.cy * -0.05}deg) 
                    rotateY(${current.cx * 0.05}deg)
                `;
            }

            animationFrame = requestAnimationFrame(update);
        };

        update();
    });
</script>

<style>
  h2 {
    font-size: 3rem;
    margin-bottom: 2rem; /* Reduced from 3rem */
    text-align: center;
  }
  .grid {
    display: flex; /* Changed from grid to flex for horizontal scrolling */
    gap: 4rem; /* More spacing between cards */
    max-width: 100%;
    margin: 0 auto;
    overflow-x: auto; /* Enable horizontal scrolling */
    padding: 2rem 4rem; /* Add padding for scroll/hover space */
    /* Hide scrollbar for cleaner look (optional) */
    scrollbar-width: none;
    -ms-overflow-style: none;
    justify-content: flex-start; /* Start from left */
  }
  
  .grid::-webkit-scrollbar {
    display: none;
  }

  /* PROJECT ITEM (Container) */
  .project-item {
    position: relative;
    
    /* Card Ratio Calculation */
    /* Standard Poker Card: 63.5mm x 88.9mm ~ 0.714 aspect ratio */
    /* Height: 500px -> 450px (-10%) */
    /* Width: 357px -> 321px (-10%) */
    height: 450px; 
    width: 321px;
    flex: 0 0 auto; /* Prevent shrinking in flex container */
    
    display: flex;
    align-items: center;
    justify-content: center;
    /* overflow: hidden; */ /* Remove overflow to let 3D pop out */
    border-radius: 12px;
    box-sizing: border-box;
    /* transition: 0.5s; Remove transition here, handled by block */
    /* background: #000; Remove background from container */
    perspective: 1000px; /* Enable 3D space for children */
    text-decoration: none; /* Remove underline for anchor */
    cursor: pointer;
  }

  /* BACKGROUND LAYERS */
  .bg, .blur {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    object-fit: cover; /* Ensure video fills the container */
    transform: scale(1.05); /* Slight scale to cover edges during tilt */
    z-index: 0;
    pointer-events: none; 
    border-radius: 12px; /* Match radius */
  }

  .bg {
    opacity: 0.1; /* Dim initially */
    z-index: 1;
    transition: opacity 0.5s;
  }
  
  .project-item:hover .bg {
    opacity: 0.4;
  }

  .blur {
    opacity: 0; 
    filter: blur(5px);
    z-index: 0;
  }

  /* BLOCK (Card Body) */
  .block {
    position: relative;
    z-index: 2;
    width: 100%;
    height: 100%;
    padding: 2rem; /* Reduced padding from 2.5rem */
    color: #ffffff;
    max-width: 450px; 
    border-radius: 10px;
    transform-style: preserve-3d;
    transition: box-shadow 0.2s; 
    
    display: flex; /* Ensure centering content */
    flex-direction: column;
    justify-content: center;
    background: transparent; /* BG is now inside */
    overflow: hidden; 
  }
  
  .project-item:hover .block {
      box-shadow: 0 20px 50px rgba(0,0,0,0.5); 
  }
  
  /* CIRCLE LIGHT */
  .circleLight {
    position: absolute;
    top: 0;
    left: 0; 
    width: 100%; 
    height: 100%;
    pointer-events: none;
    z-index: 10;
    opacity: 0;
    transition: opacity 0.2s;
  }

  .project-item:hover .circleLight {
    opacity: 1;
  }

  /* TEXT CONTENT */
  .text {
      position: relative;
      z-index: 20; /* Highest priority */
      display: flex;
      flex-direction: column;
      justify-content: flex-start; /* Was center */
      height: 100%;
      text-shadow: 0 2px 4px rgba(0,0,0,0.8);
      transform: translateZ(30px); /* Lift text off the card */
      padding-top: 3rem; /* Add padding to push text down from top */
  }

  h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem; /* Reduced from 1.75rem */
    font-weight: 700;
    color: #fff; 
  }
  
  .year {
    font-size: 1.1rem; /* Reduced from 1.25rem */
    font-weight: 400;
    color: rgba(255, 255, 255, 0.6);
    background: rgba(255, 255, 255, 0.1);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    margin-left: 0; 
    margin-bottom: 0.5rem; 
    align-self: flex-start; 
    width: fit-content;
  }
  
  .tech {
    font-size: 1.1rem; /* Reduced from 1.25rem */
    color: var(--accent-color);
    font-family: monospace;
    display: block;
    margin-bottom: 1rem;
    text-shadow: none; 
  }
  p {
    color: #e0e0e0;
    font-size: 1.1rem; /* Reduced from 1.25rem */
    line-height: 1.5; /* Slightly tighter line height */
    margin: 0;
    text-align: justify;
  }
  @media (max-width: 1024px) {
    .grid {
        flex-direction: column;
        align-items: center;
        overflow-x: visible;
        padding: 2rem 1rem;
        gap: 6rem;
    }
  }
</style>
