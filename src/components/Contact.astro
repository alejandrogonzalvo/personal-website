<style>
  .contact {
    text-align: center;
    padding-bottom: 8rem;
  }
  h2 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
  }
  p {
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto 3rem;
    line-height: 1.6;
    font-size: 1.1rem;
  }
  .link-item {
    display: block;
    font-size: 1.25rem;
    color: var(--text-primary);
    text-decoration: none;
    margin-bottom: 1.5rem;
    transition: color 0.2s;
  }
  .link-item:hover {
    color: var(--accent-color);
  }
  .socials {
    display: flex;
    gap: 1rem;
    justify-content: center;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }
  .socials a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s;
    font-size: 1.1rem;
  }
  .socials a:hover {
    color: var(--text-primary);
  }
</style>
