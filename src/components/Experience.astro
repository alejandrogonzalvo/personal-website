---
import Section from './Section.astro';

const professional = [
  {
    company: "CERN",
    role: "Software Developer",
    date: "Oct 2025 – Present",
    location: "Valencia, Spain (Remote)",
    description: "Developing a Python application to migrate 800+ custom websites while preserving layout and styling through pattern recognition."
  },
  {
    company: "CERN",
    role: "Junior Software Developer",
    date: "July 2024 – Sep 2025",
    location: "Geneva, Switzerland",
    description: "- Implemented CI/CD pipelines reducing feature process time by 90%.\n- Developed automated E2E and accessibility tests.\n- Built a multi-threaded link checker scanning 140,000 URLs."
  },
  {
    company: "Polytechnic University of Valencia",
    role: "Full-Stack Developer",
    date: "Sep 2023 – July 2024",
    location: "Valencia, Spain (Remote)",
    description: "- Developed quantum circuit visualizer using FastAPI, React and Three.js supporting up to 10,000 qubits.\n- Developed a distributed quantum network compiler in Python and C++, benchmarking compilation algorithms for performance optimization (see arXiv:2407.17306v1)."
  }
];

const volunteering = [
  {
    company: "European Hyperloop Week",
    role: "Executive Director & Technical Lead",
    date: "Sep 2023 – May 2025",
    location: "Europe (Remote)",
    description: "- Led a 50+ member organization, managing event organization and jury recruitment using Agile methodologies.\n- Defined long-term roadmap balancing sponsor and participant goals and established award rubrics."
  },
  {
    company: "Hyperloop UPV",
    role: "Embedded Software Engineer",
    date: "Sep 2022 – Aug 2023",
    location: "Valencia, Spain",
    description: "- Developed type-safe, zero-overhead C++20 Hardware Abstraction Layer for STM32H7 peripherals.\n- Built real-time battery monitoring firmware managing 72 Li-Po cells with per-cell temperature and voltage tracking for 220V high-voltage system.\n- Developed charging algorithm for custom-made chargers, enabling on-board charging and eliminating extraction requirements."
  }
];
---

<Section class="experience">
  <h2>Experience</h2>
  
  <div class="timeline">
    <h3 class="subsection-title">Professional Experience</h3>
    {professional.map(item => (
      <div class="timeline-item">
        <div class="timeline-content">
          <div class="timeline-header">
            <h3>{item.role} <span class="company">@ {item.company}</span></h3>
            <span class="date">{item.date}</span>
          </div>
          <p>{item.description}</p>
        </div>
      </div>
    ))}

    <div class="timeline-separator"></div>

    <h3 class="subsection-title">Student Associations</h3>
    {volunteering.map(item => (
      <div class="timeline-item">
        <div class="timeline-content">
          <div class="timeline-header">
            <h3>{item.role} <span class="company">@ {item.company}</span></h3>
            <span class="date">{item.date}</span>
          </div>
          <p>{item.description}</p>
        </div>
      </div>
    ))}
  </div>
</Section>

<script>
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, {
    threshold: 0.1,
    rootMargin: "0px 0px -50px 0px"
  });

  document.querySelectorAll('.timeline-item').forEach((item) => {
    observer.observe(item);
  });
</script>

<style>
  h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
  }
  
  .subsection-title {
    font-size: 1.5rem;
    color: var(--accent-color);
    margin: 2rem 0 1.5rem 0;
    padding-left: 2rem;
    opacity: 0.9;
  }
  
  .timeline {
    position: relative;
    padding-left: 0.5rem;
  }
  
  /* Continuous line */
  .timeline::before {
     content: '';
     position: absolute;
     left: 0.5rem;
     top: 0;
     bottom: 0;
     width: 2px;
     background: var(--surface-color);
     z-index: 0;
  }

  .timeline-item {
    position: relative;
    margin-bottom: 3rem;
    padding-left: 2.5rem;
    
    /* Animation initial state */
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }
  
  /* Add delay as requested */
  .timeline-item.visible {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.2s; /* Delay for fade in */
  }

  /* Revert to dots using ::before */
  .timeline-item::before {
    content: '';
    position: absolute;
    left: 0; /* Center aligned with the line (relative to padding-box of .timeline-item which starts at 0.5rem in .timeline) */
    top: 0.6rem;
    width: 0.8rem;
    height: 0.8rem;
    background: var(--accent-color);
    border-radius: 50%;
    z-index: 1;
    transform: translateX(-50%);
    box-shadow: 0 0 0 4px var(--background-color); /* Spacing from line */
  }

  .timeline-header {
    margin-bottom: 0.5rem;
  }

  h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
  }

  .company {
    color: var(--accent-color);
    font-weight: 400;
  }

  .date {
    display: block;
    font-size: 0.9rem;
    color: var(--text-secondary);
    margin-top: 0.25rem;
  }

  p {
    color: var(--text-secondary);
    line-height: 1.6;
    margin: 0;
    white-space: pre-wrap;
  }

  .timeline-separator {
    border-top: 2px dashed var(--text-secondary); /* Small lines, more visible color */
    margin: 2rem 0 2rem 2rem; /* Indent to match content */
    opacity: 0.3;
    position: relative;
  }
</style>
