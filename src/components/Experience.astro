---
import Section from './Section.astro';

const professional = [
  {
    company: "CERN",
    role: "Software Developer",
    date: "Oct 2025 – Present",
    location: "Valencia, Spain (Remote)",
    points: [
      "Developing a Python application to migrate 800+ custom websites while preserving layout and styling through pattern recognition."
    ]
  },
  {
    company: "CERN",
    role: "Junior Software Developer",
    date: "July 2024 – Sep 2025",
    location: "Geneva, Switzerland",
    points: [
      "Implemented CI/CD pipelines reducing feature process time by 90%.",
      "Developed automated E2E and accessibility tests.",
      "Built a multi-threaded link checker scanning 140,000 URLs."
    ]
  },
  {
    company: "Polytechnic University of Valencia",
    role: "Full-Stack Developer",
    date: "Sep 2023 – July 2024",
    location: "Valencia, Spain (Remote)",
    points: [
      "Developed quantum circuit visualizer using FastAPI, React and Three.js supporting up to 10,000 qubits.",
      "Developed a distributed quantum network compiler in Python and C++, benchmarking compilation algorithms for performance optimization (see arXiv:2407.17306v1)."
    ]
  }
];

const volunteering = [
  {
    company: "European Hyperloop Week",
    role: "Executive Director",
    date: "July 2024 – May 2025",
    location: "Europe (Remote)",
    points: [
      "Led and managed an international student organization of 50+ members using Agile methodologies.",
      "Defined long-term strategic roadmap, balancing corporate sponsor interests and student participant goals."
    ]
  },
  {
    company: "European Hyperloop Week",
    role: "Technical Lead",
    date: "Jan. 2023 – July 2024",
    location: "Europe (Remote)",
    points: [
      "Co-organized international event in Zurich, managing jury recruitment, deadlines, and technical feasibility assessments.",
      "Created and defined criteria for ’Sense & Control’ award, evaluating vehicle software design, communication protocols, and sensor integration."
    ]
  },
  {
    company: "Hyperloop UPV",
    role: "Embedded Software Engineer",
    date: "Sep 2022 – Aug 2023",
    location: "Valencia, Spain",
    points: [
      "Developed type-safe, zero-overhead C++20 Hardware Abstraction Layer for STM32H7 peripherals.",
      "Built real-time battery monitoring firmware managing 72 Li-Po cells with per-cell temperature and voltage tracking for 220V high-voltage system.",
      "Developed charging algorithm for custom-made chargers, enabling on-board charging and eliminating extraction requirements."
    ]
  }
];
---

<Section class="experience">
  <h2>Experience</h2>
  
  <div class="timeline">
    <h3 class="subsection-title scroll-animate">Professional Experience</h3>
    {professional.map(item => (
      <div class="timeline-item">
        <div class="timeline-content">
          <div class="timeline-header">
            <div class="header-row">
              <h3>{item.role}</h3>
              <span class="date">{item.date}</span>
            </div>
            <span class="company">{item.company}</span>
          </div>
          <ul class="points">
            {item.points.map(point => (
              <li>{point}</li>
            ))}
          </ul>
        </div>
      </div>
    ))}

    <div class="timeline-separator scroll-animate"></div>

    <h3 class="subsection-title scroll-animate">Student Associations</h3>
    {volunteering.map(item => (
      <div class="timeline-item">
        <div class="timeline-content">
          <div class="timeline-header">
            <div class="header-row">
              <h3>{item.role}</h3>
              <span class="date">{item.date}</span>
            </div>
            <span class="company">{item.company}</span>
          </div>
          <ul class="points">
            {item.points.map(point => (
              <li>{point}</li>
            ))}
          </ul>
        </div>
      </div>
    ))}
  </div>
</Section>

<script>
  import { ANIMATION_ROOT_MARGIN } from '../config';

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      } else {
        entry.target.classList.remove('visible');
      }
    });
  }, {
    threshold: 0.1,
    rootMargin: ANIMATION_ROOT_MARGIN
  });

  document.querySelectorAll('.timeline-item, .scroll-animate').forEach((item) => {
    observer.observe(item);
  });
</script>

<style>
  h2 {
    font-size: 3rem;
    margin-bottom: 3rem;
  }
  
  .subsection-title {
    font-size: 2rem;
    color: var(--accent-color);
    margin: 3rem 0 2.5rem 0;
    padding-left: 2rem;
    /* Removed opacity to match the dots color exactly */
  }
  
  /* Shared Scroll Animation */
  .scroll-animate {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }
  .scroll-animate.visible {
      opacity: 1;
      transform: translateY(0);
  }

  .timeline {
    position: relative;
    padding-left: 0.5rem;
  }
  
  /* Continuous line */
  .timeline::before {
     content: '';
     position: absolute;
     left: 0.5rem;
     top: 0;
     bottom: 0;
     width: 2px;
     background: var(--surface-color);
     z-index: 0;
  }

  .timeline-item {
    position: relative;
    margin-bottom: 4rem;
    padding-left: 3rem;
    
    /* Animation initial state */
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }
  
  /* Add delay as requested */
  .timeline-item.visible {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.2s; /* Delay for fade in */
  }

  /* Revert to dots using ::before */
  .timeline-item::before {
    content: '';
    position: absolute;
    left: 0; /* Center aligned with the line (relative to padding-box of .timeline-item which starts at 0.5rem in .timeline) */
    top: 0.7rem;
    width: 1rem;
    height: 1rem;
    background: var(--accent-color);
    border-radius: 50%;
    z-index: 1;
    transform: translateX(-50%);
    box-shadow: 0 0 0 4px var(--background-color); /* Spacing from line */
  }

  .timeline-header {
    margin-bottom: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .header-row {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    width: 100%;
  }

  h3 {
    font-size: 1.75rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.2;
  }

  .company {
    color: var(--accent-color);
    font-weight: 400;
    font-size: 1.5rem;
  }

  .date {
    font-size: 1.1rem;
    color: var(--text-secondary);
    white-space: nowrap;
    margin-left: 1rem;
  }

  .points {
    list-style: none;
    margin: 1rem 0 0 0;
    padding: 0;
  }

  .points li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-secondary);
    font-size: 1.25rem;
    line-height: 1.6;
    text-align: justify;
  }

  .points li::before {
    content: "•";
    color: var(--accent-color);
    position: absolute;
    left: 0;
    font-weight: bold;
  }

  .timeline-separator {
    border-top: 2px dashed var(--text-secondary); /* Small lines, more visible color */
    margin: 2rem 0 2rem 2rem; /* Indent to match content */
    opacity: 0.3;
    position: relative;
  }
</style>
